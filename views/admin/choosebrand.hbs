<form class="form-horizontal p-5" action="/admin/addproduct" method="post">
<fieldset>

<center class="p-5"><h3 style="text-decoration: underline;">Add Product</h3></center>

<center>
<!-- Select Basic -->
<div class="form-group">
    <label for="brand">Choose a brand:</label>
    <select id="brand" name="brand">
        {{#each brand}}
        <option value="{{this.brandname}}">{{this.brandname}}</option>
        {{/each}}
    </select>
</div>
<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-4">
    <button type="submit" class="btn btn-primary">Next</button>
  </div>
  </div>
</center>

</fieldset>
</form>
