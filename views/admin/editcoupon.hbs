
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="modal-body p-5 mx-5">
				<form action="/admin/editcoupon?id={{coupon._id}}" method="post">
					<div class="form-group">
						<i class="fa fa-plus-square-o"></i>
						<input name="coupon_code" id="coupon_code" type="text" class="form-control" placeholder="Enter Coupon Code" value="{{coupon.coupon_code}}" required="required" readonly>
					</div>
                    <div class="form-group">
						<span>Minimum Amount</span>
						<input name="minamount" id="minamount" type="number" class="form-control" placeholder="Minimum Amount" value="{{coupon.minamount}}" required="required">
					</div>

					<div class="form-group">
						<i class="fa fa-plus-square-o"></i>
						<input name="discount" id="discount" type="number" class="form-control" placeholder="Discount" value="{{coupon.discount}}" required="required" min="1" max="100">
					</div>

                    <div class="form-group">
						<span>Valid From</span>
						<input name="validfrom" id="validfrom" type="date" class="form-control" value="{{coupon.validfrom}}" required="required">
					</div>
                    <div class="form-group">
						<span>Valid Till</span>
						<input name="validtill" id="validtill" type="date" class="form-control" required="required" value="{{coupon.validtill}}">
					</div>
					<div class="form-group">
						<input type="submit" class="btn btn-primary btn-block btn-lg" value="Save Changes">
					</div>
				</form>
</div>
