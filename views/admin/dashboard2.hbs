            <tr>
                <th>date</th>
                <th>orderID</th>
                <th>total</th>
                <th>offer</th>
                <th>paymentMethod</th>
       
            </tr>
        </thead>
        <tbody >
          {{#each report}}
            <tr>
                <td>{{this.delivery_details.date}}</td>
                <td>{{this._id}}</td>
                <td>{{this.totalAmount}}</td>
                {{#if offerPrice}}
                <td>{{this.offerPrice}}</td>
                {{else}}
                <td> -- </td>
                {{/if}}
                <td>{{this.paymentMethod}}</td>
     
            </tr>
            {{/each}}
          </tbody>
    </table>




</section>






