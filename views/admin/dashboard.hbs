<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script>
    function getChart() {
        console.log("hiii")
        $.ajax({
            url: '/admin/day',
            method: 'get',
            success: (data) => {
                
                var ctx = document.getElementById('myChart1').getContext('2d');
                let xaxis = []
                let countss = []
                for (const val of data) {
                    let date = `${val.detail.day}/${val.detail.month}/${val.detail.year}`
                    xaxis.push(date)
                    countss.push(val.count)
                }
                var myChart1 = new Chart(ctx, {
                    type: 'pie',
                    
                    data: {
                        labels: [...xaxis],
                        datasets: [{
                            label: 'Number of Products',
                            data: [...countss],
                            backgroundColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            }
        })
    }
    
    
</script>
<script src="../../public/javascripts/chartmin.js"></script>
     
