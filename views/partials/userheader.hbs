<!-- Header -->
	<header>
		<!-- Header desktop -->
		<div class="container-menu-desktop">
			<!-- Topbar -->
			<div class="top-bar">
				<div class="content-topbar flex-sb-m h-full container">
					<div class="left-top-bar">
						Free shipping for standard order over $100
					</div>

					<div class="right-top-bar flex-w h-full">
						<a href="#" class="flex-c-m trans-04 p-lr-25">
							Help & FAQs
						</a>

						<a href="#" class="flex-c-m trans-04 p-lr-25">
							EN
						</a>

						<a href="#" class="flex-c-m trans-04 p-lr-25">
							USD
						</a>
					</div>
				</div>
			</div>

			<div class="wrap-menu-desktop">
				<nav class="limiter-menu-desktop container">
					
					<!-- Logo desktop -->		
					<a href="#" class="logo">
						<img src="images/icons/beghedh.png" alt="IMG-LOGO">
					</a>

					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							{{#if home}}
							<li class="active-menu">
								<a href="/">Home</a>
							</li>
							{{else}}
							<li>
								<a href="/">Home</a>
							</li>
							{{/if}}
							{{#if shop}}
							<li class="active-menu">
								<a href="/products">Shop</a>
							</li>
							{{else}}
							<li>
								<a href="/products">Shop</a>
							</li>
							{{/if}}
							<li>
								<a href="#">About</a>
							</li>

							<li>
								<a href="#">Contact</a>
							</li>
							{{#if user}}
							<li class="menu">
								<a href="#">My Account</a>
								<ul class="sub-menu">
									<li><a href="/myaddresses">My Address</a></li>
									<li><a href="/vieworders">My Orders</a></li>
									<li><a href="/wishlist">Wishlist</a></li>
									<li><a href="/myprofile">My Profile</a></li>
									<li><a href="/changepasswordotpverification">Change Password</a></li>
								</ul>
							</li>
							{{/if}}
						</ul>
					</div>	

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m">
						{{#if user}}
						<a href="/viewcart">
						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
							<i class="zmdi zmdi-shopping-cart"></i>
							<span id="cart-count" class="position-absolute top-0 left-100 translate-middle badge rounded-pill" style="color: inherit;">{{cartCount}}</span>
						</div>
						</a>
						{{else}}
						<a href="/viewcart">
						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
							<i class="zmdi zmdi-shopping-cart"></i>
							<span id="cart-count" class="position-absolute top-0 left-100 translate-middle badge rounded-pill" style="color: inherit;">0</span>
						</div>
						</a>
						{{/if}}
						<a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
							<i class="zmdi zmdi-favorite-outline"></i>
						</a>
						{{#if user}}
						<a href="/logout" class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10" style="font-size: inherit; text-decoration:none;">
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10" style="color:inherit; font-size: inherit;">
								Logout
								<i class="fa fa-sign-out"></i>
							</div>
						</a>
						{{else}}
						<a href="/login" class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10" style="font-size: inherit; text-decoration:none;">
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10" style="color:inherit; font-size: inherit;">
								Login
							</div>
						</a>
						{{/if}}
					</div>
				</nav>
			</div>	
		</div>

		<!-- Header Mobile -->
		<div class="wrap-header-mobile">
			<!-- Logo moblie -->		
			<div class="logo-mobile">
				<a href="/"><img src="images/icons/beghedh.png" alt="IMG-LOGO"></a>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m m-r-15">

				<a href="/viewcart">
				<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 js-show-cart">
					<i class="zmdi zmdi-shopping-cart"></i>
				</div>
				</a>


				<a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 ">
					<i class="zmdi zmdi-favorite-outline"></i>
				</a>

				{{#if user}}
				<a href="/logout" class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10" style="font-size: inherit; text-decoration:none;">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10" style="color:inherit; font-size: inherit;">
						Logout
						<i class="fa fa-sign-out"></i>
					</div>
				</a>
				{{else}}
				<a href="/login" class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10" style="font-size: inherit; text-decoration:none;">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10" style="color:inherit; font-size: inherit;">
						Login
					</div>
				</a>
				{{/if}}
			</div>

			<!-- Button show menu -->
			<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
			</div>
		</div>


		<!-- Menu Mobile -->
		<div class="menu-mobile">
			<ul class="topbar-mobile">
				<li>
					<div class="left-top-bar">
						Free shipping for standard order over $100
					</div>
				</li>

				<li>
					<div class="right-top-bar flex-w h-full">
						<a href="#" class="flex-c-m p-lr-10 trans-04">
							Help & FAQs
						</a>

						<a href="#" class="flex-c-m p-lr-10 trans-04">
							My Account
						</a>

						<a href="#" class="flex-c-m p-lr-10 trans-04">
							EN
						</a>

						<a href="#" class="flex-c-m p-lr-10 trans-04">
							USD
						</a>
					</div>
				</li>
			</ul>

			<ul class="main-menu-m">
				{{#if home}}
				<li class="active-menu">
					<a href="/">Home</a>
				</li>
				{{else}}
				<li>
					<a href="/">Home</a>
				</li>
				{{/if}}
				{{#if shop}}
				<li class="active-menu">
					<a href="/products">Shop</a>
				</li>
				{{else}}
				<li>
					<a href="/products">Shop</a>
				</li>
				{{/if}}
				<li>
					<a href="#">About</a>
				</li>
			
				<li>
					<a href="#">Contact</a>
				</li>
			</ul>
		</div>

		<!-- Modal Search -->
		<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
			<div class="container-search-header">
				<button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
					<img src="images/icons/icon-close2.png" alt="CLOSE">
				</button>

				<form class="wrap-search-header flex-w p-l-15">
					<button class="flex-c-m trans-04">
						<i class="zmdi zmdi-search"></i>
					</button>
					<input class="plh3" type="text" name="search" placeholder="Search...">
				</form>
			</div>
		</div>
	</header>



