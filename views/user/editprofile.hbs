<div class="row mt-5">
<center>
  <div class="col-md-8 mb-4 mt-5 w-50">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Edit Profile</h5>
      </div>
      <div class="card-body">
        <form class="mt-5" action="/editprofile" method="post">

          <!-- Text input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form7Example4">Name</label>
            <input type="text" id="name" name="name" class="form-control" value="{{userd.name}}" />
          </div>

          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <label class="form-label" for="form7Example1">Email</label>
                <input type="email" id="email" name="email" class="form-control" value="{{userd.email}}"/>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <label class="form-label" for="form7Example2">Phone Number</label>
                <input type="number" id="number" name="number" class="form-control" value="{{userd.number}}"/>
              </div>
            </div>
          </div>
            
        <div class="card-footer py-3">
            <button type="submit" class="btn btn-primary">Save</button>
            
        </div>
            
        </form>

      </div>
    </div>
  </div>
</center>

  
</div>