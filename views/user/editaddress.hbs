<div class="row mt-5">
<center>
  <div class="col-md-8 mb-4 mt-5">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Add Address</h5>
      </div>
      <div class="card-body">
        <form class="mt-5" action="/editaddress?id={{address._id}}" method="post">
          <!-- 2 column grid layout with text inputs for the first and last names -->
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <input value="{{address.firstname}}" type="text" id="firstname" name="firstname" class="form-control" required/>
                <label class="form-label" for="form7Example1">First name</label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input value="{{address.secondname}}" type="text" id="secondname" name="secondname" class="form-control" required/>
                <label class="form-label" for="form7Example2">Last name</label>
              </div>
            </div>
          </div>

          <!-- Text input -->
          <div class="form-outline mb-4">
            <input value="{{address.address}}" type="text" id="address" name="address" class="form-control" required/>
            <label class="form-label" for="form7Example4">Address</label>
          </div>

          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <input value="{{address.city}}" type="text" id="city" name="city" class="form-control" required/>
                <label class="form-label" for="form7Example1">City</label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input value="{{address.state}}" type="text" id="state" name="state" class="form-control" required/>
                <label class="form-label" for="form7Example2">State</label>
              </div>
            </div>
          </div>

          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <input value="{{address.pincode}}" type="number" id="pincode" name="pincode" class="form-control" required/>
                <label class="form-label" for="form7Example1">Pin Code</label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input value="{{address.number}}" type="number" id="number" name="number" class="form-control" required/>
                <label class="form-label" for="form7Example2">Phone Number</label>
              </div>
            </div>
          </div>
            
        <div class="card-footer py-3">
            <button type="submit" class="btn btn-primary">Add Address</button>
        </div>
            
        </form>

      </div>
    </div>
  </div>
</center>

  
</div>