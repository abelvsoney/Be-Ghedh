	</script>
	<script>
	function addToCart(proId) {
		$.ajax({
			url:'/addtocart/'+proId,
			method:'get',
			success: (response) => {
				if(response.status) {
					let count=$('#cart-count').html()
					count = parseInt(count) + 1
					$("#cart-count").html(count)
				}
			}
		})
	}
</script>
<script>
	function deleteFromCart(proId) {
		$.ajax({
			url:'/deleteproductfromcart/'+proId,
			method:'get',
			success: (response) => {
				if(response.status) {
					location.reload()
					let count=$('#cart-count').html()
					count = parseInt(count) - 1
					$("#cart-count").html(count)
				}
			}
		})
	}
</script>

